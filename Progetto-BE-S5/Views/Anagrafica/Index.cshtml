@model IEnumerable<Progetto_BE_S5.Models.Anagrafica>

@{
    ViewBag.Title = "Anagrafica Trasgressori";
}

<h2>Elenco Trasgressori</h2>

<table class="table">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trasgressore in Model)
        {
            <tr>
                <td>@trasgressore.Cognome</td>
                <td>@trasgressore.Nome</td>
                <td>@trasgressore.Indirizzo</td>
                <td>@trasgressore.Citta</td>
                <td>@trasgressore.CAP</td>
                <td>@trasgressore.CodFisc</td>
            </tr>
        }
    </tbody>
</table>
